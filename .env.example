# ==============================================
# AIAR Guitar - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets!

# ---------------------------------------------
# Frontend Configuration
# ---------------------------------------------

# WebSocket URL for backend connection
NEXT_PUBLIC_WSS_URL=ws://localhost:8000/ws/inference

# Enable debug mode by default (set to "false" in production)
NEXT_PUBLIC_DEBUG_MODE=true

# ---------------------------------------------
# Backend Configuration
# ---------------------------------------------

# Qdrant vector database URL
QDRANT_URL=http://localhost:6333

# Embedding mode: "raw" (63D) or "mlp" (128D)
EMBEDDING_MODE=raw

# Chord recognition confidence threshold (0.0 - 1.0)
SCORE_THRESHOLD=0.85

# Qdrant collection name
QDRANT_COLLECTION=chords_v1

# ---------------------------------------------
# Optional: AI/LLM Features
# ---------------------------------------------

# OpenAI API key (for future Jam Agent features)
OPENAI_API_KEY=

# ---------------------------------------------
# Development Settings
# ---------------------------------------------

# Enable CORS for all origins in development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
